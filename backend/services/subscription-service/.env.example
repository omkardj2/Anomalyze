# ===========================================
# Subscription Service - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Service Configuration
SERVICE_NAME=subscription-service
PORT=3004
NODE_ENV=development
LOG_LEVEL=info

# ----- Razorpay Configuration (Payments) -----
# Get these from Razorpay Dashboard
RAZORPAY_KEY_ID=rzp_test_...
RAZORPAY_KEY_SECRET=...
RAZORPAY_WEBHOOK_SECRET=...

# ----- PostgreSQL Configuration (Shared) -----
# Subscriptions and Invoices tables
DATABASE_URL=postgresql://user:password@localhost:5432/anomalyze

# ----- Redis Configuration (Shared) -----
REDIS_URL=redis://localhost:6379/0

# ----- Kafka Configuration (Shared) -----
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=subscription-service
# Topic to publish payment success/failure events
KAFKA_PAYMENTS_TOPIC=payments
