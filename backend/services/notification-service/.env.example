# ===========================================
# Notification Service - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Service Configuration
SERVICE_NAME=notification-service
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# ----- Kafka Configuration -----
# For local Docker development (Redpanda)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=notification-service
KAFKA_GROUP_ID=notification-service-group
KAFKA_ANOMALIES_TOPIC=anomalies

# Security
# KAFKA_SECURITY_PROTOCOL=PLAINTEXT
# For Confluent Cloud:
# KAFKA_SECURITY_PROTOCOL=SASL_SSL
# KAFKA_SASL_MECHANISM=PLAIN
# KAFKA_SASL_USERNAME=your-api-key
# KAFKA_SASL_PASSWORD=your-api-secret

# ----- Redis Configuration -----
REDIS_URL=redis://localhost:6379/0

# ----- PostgreSQL Configuration -----
DATABASE_URL=postgresql://user:password@localhost:5432/anomalyze

# ===========================================
# Channel Providers
# ===========================================

# ----- Email (SMTP) -----
# Example: Gmail, SendGrid, Amazon SES
# Default: Mailhog (for local dev)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
SMTP_SECURE=false
EMAIL_FROM="Anomalyze Alert <alerts@anomalyze.com>"

# ----- SMS (Twilio) -----
# Leave empty to disable SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ----- Webhook Security -----
# Secret key to sign webhook payloads
WEBHOOK_SIGNING_SECRET=change-me-in-production
