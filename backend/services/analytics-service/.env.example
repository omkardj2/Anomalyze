# ===========================================
# Analytics Service - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Service Configuration
SERVICE_NAME=analytics-service
PORT=3003
NODE_ENV=development
LOG_LEVEL=info

# ----- Kafka Configuration (Shared) -----
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=analytics-service
KAFKA_GROUP_ID=analytics-consumer-group
# Topics to aggregate
KAFKA_TRANSACTIONS_TOPIC=transactions
KAFKA_ANOMALIES_TOPIC=anomalies

# ----- Redis Configuration (Caching Aggregations) -----
REDIS_URL=redis://localhost:6379/0

# ----- PostgreSQL Configuration (Shared) -----
DATABASE_URL=postgresql://user:password@localhost:5432/anomalyze

# ----- API Rate Limiting -----
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
