# ===========================================
# Auth Service - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Service Configuration
SERVICE_NAME=auth-service
PORT=3002
NODE_ENV=development
LOG_LEVEL=info

# ----- Clerk Configuration (Required) -----
# Get these from your Clerk Dashboard -> API Keys
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
# Webhook Secret (if using webhooks to sync users to DB)
CLERK_WEBHOOK_SECRET=whsec_...

# ----- PostgreSQL Configuration (Shared) -----
# Auth service syncs Clerk users to this DB
DATABASE_URL=postgresql://user:password@localhost:5432/anomalyze

# ----- Redis Configuration (Shared) -----
REDIS_URL=redis://localhost:6379/0

# ----- Kafka Configuration (Shared) -----
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=auth-service
